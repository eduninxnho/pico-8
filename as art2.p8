__lua__
--inicio
function _init()
	x=30
	y=30
	c=2
end

--mudancas
function _update()
	if	btn(➡️) then
		x=x+1
		c=3
	end
	if	btn(⬅️) then
		x=x-1
		c=1
	end
	if	btn(⬆️) then
		y=y-1
	end
	if	btn(⬇️) then
		y=y+1
	end
end

--graficos
function _draw()
	cls()
	spr(c,x,y)

end
